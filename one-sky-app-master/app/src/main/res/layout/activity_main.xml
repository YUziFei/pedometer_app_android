<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/gray001"
        android:gravity="bottom"
        android:padding="@dimen/dp_5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_home_page"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/image_home_ture"
                />


            <TextView
                android:id="@+id/tv_home_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计步"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorBackground"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_history"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_history"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/image_history_false"/>


            <TextView
                android:id="@+id/tv_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/textGray"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_mine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_mine"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/image_setting_false"/>


            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/textGray"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
